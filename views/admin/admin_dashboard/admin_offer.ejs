<!DOCTYPE html>
<html lang="en">

<%-include('./common/header')%>

<body>

    <!-- ======= Header ======= -->
    <%-include('./common/nav')%>
    <!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <%-include('./common/sidebar')%>
    <!-- End Sidebar-->

    <main id="main" class="main">

        <%-include('./common/adminauth')%>
        <!-- End Page Title -->
        <a href="/admin/addoffer" class="btn btn-primary">Add offers</a>
        <br> <br>

        <div class="container" style="text-align: center;">
            <table class="table table-bordered border-primary">
                <thead>
                  <tr>
                    <th scope="col">id</th>
                    <th scope="col">Offers</th>
                    <th scope="col">image</th>
                    <th scope="col" colspan="2">Action</th>
                    
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <%for(fdata of offerdata){%>
                    <th scope="row">1</th>
                    <td><%=fdata.offers%></td>
                    
                    <td><img src="/<%=fdata.image%>" alt="" height="100px"></td>
                    <td><a href="/admin/edit/offer/<%=fdata._id%>" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete/offer/<%=fdata._id%>" class="btn btn-danger">Delete</a></td>
                  </tr>
                <%}%>
                 
                  
                  
                
                </tbody>
              </table>
        </div>

    </main>
    <!-- End #main -->

    <!-- ======= Footer ======= -->

    <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

