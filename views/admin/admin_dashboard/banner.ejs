<!DOCTYPE html>
<html lang="en">

<%-include('./common/header')%>

<body>

    <!-- ======= Header ======= -->
    <%-include('./common/nav')%>
    <!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <%-include('./common/sidebar')%>
    <!-- End Sidebar-->

    <main id="main" class="main">

        <%-include('./common/adminauth')%>
        <!-- End Page Title -->
        <a href="/admin/addbanner" class="btn btn-primary">Add Banner</a>
        <br> <br>

        <section class="section dashboard" style="text-align: center;">
           <!-- Primary Color Bordered Table -->
           
           <table class="table table-bordered border-primary">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Banner Title</th>
                <th scope="col">Banner Description</th>
                <th scope="col">Banner Image</th>
                <th scope="col" colspan="2">Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% let id=0
                for(iteam of alldata){%>
                    <th scope="row"><%=++id%></th>
                    <td><%=iteam.BannerTitle%></td>
                    <td><%=iteam.BannerDescription%></td>
                    <td><img src="/<%=iteam.image%>" alt="" height="100px"></td>
                    <td><a href="/admin/editbanner/<%=iteam._id%>" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/banner/delete/<%=iteam._id%>" class="btn btn-danger">Delete</a></td>
                  </tr>
                <%}%>
                </tbody>
          </table>
          <!-- End Primary Color Bordered Table -->

                
                

            
        </section>

    </main>
    <!-- End #main -->

    <!-- ======= Footer ======= -->

    <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/chart.js/chart.umd.js"></script>
    <script src="assets/vendor/echarts/echarts.min.js"></script>
    <script src="assets/vendor/quill/quill.min.js"></script>
    <script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>

</body>

</html>